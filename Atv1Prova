#include <stdio.h>

int main() {
    int opcao;
    double num1, num2, resultado;

    printf("=== CALCULADORA SIMPLES ===\n");
    printf("Escolha uma operação:\n");
    printf("1. Soma\n");
    printf("2. Subtração\n");
    printf("3. Multiplicação\n");
    printf("4. Divisão\n");
    printf("Opção: ");
    scanf("%d", &opcao);

    if (opcao < 1 || opcao > 4) {
        printf("Opção inválida.\n");
        return 1;
    }

    printf("Digite o primeiro número: ");
    scanf("%lf", &num1);
    printf("Digite o segundo número: ");
    scanf("%lf", &num2);

    switch (opcao) {
        case 1:
            resultado = num1 + num2;
            printf("Resultado: %.2lf\n", resultado);
            break;
        case 2:
            resultado = num1 - num2;
            printf("Resultado: %.2lf\n", resultado);
            break;
        case 3:
            resultado = num1 * num2;
            printf("Resultado: %.2lf\n", resultado);
            break;
        case 4:
            if (num2 == 0) {
                printf("Erro: divisão por zero.\n");
            } else {
                resultado = num1 / num2;
                printf("Resultado: %.2lf\n", resultado);
            }
            break;
    }

    return 0;
}
