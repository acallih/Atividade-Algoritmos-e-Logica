programa {
  funcao inicio() {
    //declaração de variavel
    real n1,n2,n3,n4,media_aritmetica

    //entrada de dados
    escreva("informe n1:")
    escreva(n1)
    leia(n1)

    escreva("informe n2:")
    escreva(n2)
    leia(n2)

    escreva("informe n3:")
    escreva(n3)
    leia(n3)

    escreva("informe n4:")
    escreva(n4)
    leia(n4)

   //processamento
   media_aritmetica=(n1+n2+n3+n4)/4

   //saida de dados
   escreva("media")
   escreva(media_aritmetica)

  }
}
